.whiten
  .container
    .row
      .col-sm-6
        img.centered-image(src="assets/images/commutyble-car.png")
        h2.text-center Begin the registration process by collecting email as user name and creating a password

      .sign-up-form.col-sm-5.col-sm-offset-1
        h3.text-center Sign up for Commutyble,<br/>it's free.
        form.form.form-horizontal(name="form", ng-submit="regFn.signUp(form)", novalidate="novalidate")
          .form-group.required.has-feedback(ng-class="{ 'has-success': form.email.$valid && form.$submitted, 'has-error': form.email.$invalid && form.$submitted }")
            label.control-label.col-sm-4(for="email") Email Address
            .col-sm-8
              input.form-control.input-lg(type="email", name="email", placeholder="Email Address", autofocus="true", ng-model="customer.email", ng-required="true", ng-minlength="2")
              span.glyphicon.glyphicon-ok.form-control-feedback(ng-show="form.email.$valid && form.$submitted")
              span.glyphicon.glyphicon-remove.form-control-feedback(ng-show="form.email.$invalid && form.$submitted")
              p.text-error(ng-show="form.email.$error.required && form.$submitted") Email is required.
              p.text-error(ng-show="form.email.$error.email && form.$submitted") Email is not a valid email.

          .form-group.required.has-feedback(ng-class="{ 'has-success': form.password.$valid && form.$submitted, 'has-error': form.password.$invalid && form.$submitted }")
            label.control-label.col-sm-4(for="password") Password
            .col-sm-8
              input.form-control.input-lg(type="password", name="password", placeholder="Enter your password", ng-model="customer.password", ng-required="true", ng-pattern="password.regex")
              span.glyphicon.glyphicon-ok.form-control-feedback(ng-show="form.password.$valid && form.$submitted")
              span.glyphicon.glyphicon-remove.form-control-feedback(ng-show="form.password.$invalid && form.$submitted")
              p.text-error(ng-show="form.password.$invalid && form.$submitted") Password {{ password.hint }}

          .form-group.required.has-feedback(ng-class="{ 'has-success': form.password_confirmation.$valid && form.$submitted, 'has-error': form.password_confirmation.$invalid && form.$submitted }")
            label.control-label.col-sm-4(for="password_confirmation") Confirm Password
            .col-sm-8
              input.form-control.input-lg(type="password", name="password_confirmation", placeholder="Confirm your password", ng-model="customer.password_confirmation", ng-required="true", password-match="customer.password", ng-pattern="password.regex")
              span.glyphicon.glyphicon-ok.form-control-feedback(ng-show="form.password_confirmation.$valid && form.$submitted")
              span.glyphicon.glyphicon-remove.form-control-feedback(ng-show="form.password_confirmation.$invalid && form.$submitted")
              p.text-error(ng-show="(form.password_confirmation.$error.required || form.password_confirmation.$error.pattern) && form.$submitted") Password confirmation {{ password.hint }}
              p.text-error(ng-show="form.password_confirmation.$error.unique && form.$submitted") Passwords should be the same.

          .form-group
            .col-sm-8.col-sm-offset-4
              div(vc-recaptcha="vc-recaptcha", theme="clean", key="'6LeHAPwSAAAAAADilqkzx6fxGkhu-dHW-Llisa_y'")
          .form-group.text-error(ng-bind-html="error.message")
            .col-sm-8.col-sm-offset-4
              p.text-error
                strong Errors:
              div
                p {{ error.message }}
          button.btn.btn-lg.btn-block.btn-success(type="submit", ng-disabled="form.$loading")
            span(ng-show="!form.$loading") Sign up
            div(ng-show="form.$loading")
              span.glyphicon.glyphicon-refresh.glyphicon-refresh-animate()
              | &nbsp;Loading
